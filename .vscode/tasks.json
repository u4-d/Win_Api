{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "GUI Build",
			"command": "cl.exe",
			"args": [
				"/DUNICODE",
				"/D_UNICODE",
				"/D_DEBUG",
				"/utf-8",
				"/Zc:wchar_t",
				"/Zi",
				"/EHsc",
				"/nologo",
				"/MTd",
				"/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}",
				"/link",
				"/subsystem:windows",
				"/DEBUG",
				"kernel32.lib",
				"user32.lib",
				"gdi32.lib"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "编译器: cl.exe"
		},
		{
			"type": "cppbuild",
			"label": "Console Build",
			"command": "cl.exe",
			"args": [
				"/DUNICODE",
				"/D_UNICODE",
				"/D_DEBUG",
				"/utf-8",
				"/Zc:wchar_t",
				"/Zi",
				"/EHsc",
				"/nologo",
				"/MTd",
				"/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}",
				"/link",
				"/subsystem:Console",
				"/DEBUG",
				//"/NODEFAULTLIB:libcpmtd.lib"
				//"kernel32.lib", 
				//"user32.lib" ,
				//"gdi32.lib" ,
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "编译器: cl.exe"
		},
		{
			"type": "cppbuild",
			"label": "GUI Release",
			"command": "cl.exe",
			"args": [
				"/DUNICODE",
				"/D_UNICODE",
				//"/D_DEBUG",
				"/utf-8",
				"/Zc:wchar_t",
				"/Zi",
				"/EHsc",
				"/nologo",
				"/MT", //静态 不需要打包 VC DLL
				"/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}",
				"/link",
				"/subsystem:windows",
				//"/DEBUG",
				"kernel32.lib",
				"user32.lib",
				"gdi32.lib"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "编译器: cl.exe"
		},
	]
}