				"/utf-8",
				"/Zc:wchar_t",
				"/Zi",
				"/EHsc",
				"/nologo",
				"/MTd",
				"/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}",
				"/link",
				"/subsystem:Console",
				"/DEBUG"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "编译器: cl.exe (Console Debug)"
		},
		{
			"type": "shell",
			"label": "GUI Release",
			"command": "cl.exe",
			"args": [
				"/DUNICODE",
				"/D_UNICODE",
				"/utf-8",
				"/Zc:wchar_t",
				"/Zi",
				"/EHsc",
				"/nologo",
				"/MT",
				"/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}",
				"/link",
				"/subsystem:windows",
				"kernel32.lib",
				"user32.lib",
				"gdi32.lib"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
