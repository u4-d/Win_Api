{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell", //cppbuild
			"label": "GUI Build",
			"command": "cl.exe",
			"args": [
				"/DUNICODE",
				"/D_UNICODE",
				"/D_DEBUG",
				"/utf-8",
				"/Zc:wchar_t",
				"/Zi",
				"/EHsc",
				"/nologo",
				"/MTd",
				"/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}",
				"/link",
				"/subsystem:windows",
				"/DEBUG",
				"kernel32.lib",
				"user32.lib",
				"gdi32.lib"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "编译器: cl.exe (GUI Debug)"
		},
		{
			"type": "shell",
			"label": "Console Build",
			"command": "cl.exe",
			"args": [
				"/DUNICODE",
